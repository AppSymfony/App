{% block body %}
<div class="col-md-6">
  <div class="box box-primary">
            <div class="box-header with-border">
              <h3 class="box-title">Edit Customer</h3>
            </div>
            <div class ="content">
                {% form_theme edit_form 'bootstrap_3_layout.html.twig'  %}
