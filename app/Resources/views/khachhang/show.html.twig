{% extends 'admin/admin.html.twig' %}
{% block menu %}
    {% include 'admin/menu.html.twig' %}
{% endblock %}

{% block body %}
    <!-- /.row -->
      <div class="row">
        <div class="col-xs-12">
          <div class="box">
            <div class="box-header">
              <h1 class="box-title">Customer: {{khachhang.tenkh}}</h1>

            </div>
            <!-- /.box-header -->
    <div class="box-body table-responsive no-padding" id="table_id" >
      <div class="table_id">
       <table class="table table-hover">
                    <tbody>
                        <tr>
                            <th>Id</th>
                            <td>{{ khachhang.id }}</td>
                        </tr>
                        <tr>
                            <th>Tên KH</th>
                            <td>{{ khachhang.tenkh }}</td>
                        </tr>
                        <tr>
                            <th>Email</th>
                            <td>{{ khachhang.email }}</td>
                        </tr>
                        <tr>
                            <th>Địa chỉ</th>
                            <td>{{ khachhang.diachi }}</td>
                        </tr>
                        <tr>
                            <th>SĐT</th>
                            <td>{{ khachhang.sdt }}</td>
                        </tr>
                        <tr>
                            <th>Thành viên</th>
                            <td>{% if khachhang.thanhvien %}Yes{% else %}No{% endif %}</td>
                        </tr>
                    </tbody>
                </table>

                <ul>
                        <a href="{{ path('customer_index') }}" class="btn btn-primary" >Back to the list</a>
                        <a href="{{ path('customer_edit', { 'id': khachhang.id }) }}" class="btn btn-warning">Edit</a>
                        <a class="deleteCustomer btn btn-danger" href="{{ path('customer_delete', { 'id': khachhang.id }) }}" >Delete</a>
                 </ul>
      </div>

    </div>
    </div>
{% endblock %}
{% block javascripts %}
    {{ parent() }}
{% endblock %}
