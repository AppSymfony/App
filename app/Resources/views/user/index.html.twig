{% extends 'base.html.twig' %}

{% block body %}
    <h1>Users list</h1><br>

    <table class ="table table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Username</th>
                <th>Role</th>
                <th>Email</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td><a href="{{ path('user_show', { 'id': user.id }) }}">{{ user.id }}</a></td>
                <td>{{ user.username }}</td>
                <td>{{ user.role }}</td>
                <td>{{ user.email }}</td>
                <td>
                    <a class="btn btn-primary" href="{{ path('user_show', { 'id': user.id }) }}">show</a>
                        
                    <a class="btn btn-warning" href="{{ path('user_edit', { 'id': user.id }) }}">edit</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    {% if is_granted('ROLE_ADMIN') %}
    <ul>
            <a class="btn btn-success" href="{{ path('user_new') }}">Create a new user</a>    
    </ul>
    {% endif %}
{% endblock %}
