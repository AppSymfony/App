{% extends 'admin/admin.html.twig' %}
{% block menu %}
    {% include 'admin/menu.html.twig' %}
{% endblock %}

{% block body %}
    <!-- /.row -->
      <div class="row">
        <div class="col-xs-12">
          <div class="box">
            <div class="box-header">
              <h1 class="box-title">User: {{user.username}}</h1>

            </div>
            <!-- /.box-header -->
    <div class="box-body table-responsive no-padding" id="table_id" >
      <div class="table_id">
       <table class="table table-hover">
                    <tbody>
                        <tr>
                            <th>Id:</th>
                            <td>{{ user.id }}</td>
                        </tr>
                        <tr>
                            <th>Username:</th>
                            <td>{{ user.username }}</td>
                        </tr>
                        <tr>
                            <th>Password:</th>
                            <td>{{ user.password }}</td>
                        </tr>
                        <tr>
                            <th>Role:</th>
                            <td>{{ user.role }}</td>
                        </tr>
                        <tr>
                            <th>Email:</th>
                            <td>{{ user.email }}</td>
                        </tr>
                    </tbody>
                </table>

                <ul>
                        <a href="{{ path('user_index') }}" class="btn btn-primary" >Back to the list</a>
                        <a href="{{ path('user_edit', { 'id': user.id }) }}" class="btn btn-warning">Edit</a>
                        <a class="deleteUser btn btn-danger" href="{{ path('user_delete', { 'id': user.id }) }}" >Delete</a>
                 </ul>
      </div>

    </div>
    </div>
{% endblock %}
